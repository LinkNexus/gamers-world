{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    {% include 'fragments/_header.html.twig' %}
    {% include 'fragments/_sidebar.html.twig' %}

    <div class="py-4 sm:ml-64">

        {% block breadcrumb %}
            {% include 'fragments/_breadcrumb.html.twig' %}
        {% endblock %}

        <div class="bg-gradient py-8">
            <div class="p-4 rounded-lg">
                {% include 'fragments/_flash_messages.html.twig' %}

                {% block is_verified_message %}
                    {% if app.user and not app.user.isVerified() %}
                        <twig:Utilities:Alert id="alert-not-verified" type="warning">
                            Your account is not verified.
                            <a data-turbo="false" class="hover:underline hover:underline-offset-4"
                               href="/resend-verification-email">
                                Click here to send back the mail for verification.
                            </a>
                        </twig:Utilities:Alert>
                    {% endif %}
                {% endblock %}

                {% block content %}
                {% endblock %}
            </div>
        </div>

    </div>

    {# Auth Modals #}
    {% if app.user is null %}
        <div>
            <div
                    {{ stimulus_controller('modal--structure', {
                        id: 'login-form',
                        title: 'Sign in to our platform'
                    }) }}
            >
                <twig:Turbo:Frame class="login-form" id="login-form"/>
            </div>

            <div
                    {{ stimulus_controller('modal--structure', {
                        id: 'registration-form',
                        title: 'Join our Community'
                    }) }}
            >
                <twig:Turbo:Frame class="registration-form" id="registration-form"/>
            </div>
        </div>
    {% endif %}
{% endblock %}